<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dimanor3.group3_inclass04.PasswordGenerator">

    <TextView
        android:id="@+id/passCount"
        android:layout_width="358dp"
        android:layout_height="38dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="@android:color/background_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/count" />

    <TextView
        android:id="@+id/passLen"
        android:layout_width="358dp"
        android:layout_height="36dp"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="19dp"
        android:text="TextView"
        android:textColor="@android:color/background_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passCount"
        tools:text="@string/passwordLength" />

    <TextView
        android:id="@+id/password"
        android:layout_width="108dp"
        android:layout_height="19dp"
        android:layout_marginBottom="11dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:text="Select Password Length:"
        android:textColor="@android:color/background_dark"
        app:layout_constraintBottom_toTopOf="@+id/passwordThread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passLen"
        tools:text="@string/password"/>

    <SeekBar
        android:id="@+id/passwordCount"
        android:layout_width="346dp"
        android:layout_height="35dp"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/passLen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/passwordLength"
        android:layout_width="346dp"
        android:layout_height="35dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="9dp"
        app:layout_constraintBottom_toTopOf="@+id/password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passLen" />

    <Button
        android:id="@+id/PasswordAsync"
        android:layout_width="358dp"
        android:layout_height="61dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="12dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordThread"
        tools:text="@string/butttonAsync" />

    <Button
        android:id="@+id/passwordThread"
        android:layout_width="358dp"
        android:layout_height="61dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="24dp"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/PasswordAsync"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        tools:text="@string/buttionThead" />
</android.support.constraint.ConstraintLayout>
